import java.util.Random;
import java.awt.*;
import java.util.Scanner;
/*
 * IntCounterApp makes the array, asks user for the target integer and runs the program
 */
public class IntCounterApp{
  public static void main(String[]args){
    for(int i = 0; i < 3;i++){
      System.out.println("Enter the integer: ");
      Scanner scan = new Scanner(system.in);
      int s = scan.nextInt();
      int[] a = makeArray();
      
      IntCounter i1 = new IntCounter(a);
      i1.showTarget(s);
    }
  }//end method
  
  public int[] makeArray(){
    Random generator = new Random();
    int array = new int[generator.nextInt(11) + 5];
    array = new int [generator.nextInt(4) + 1];
    return array;
  }//end method
}//end class